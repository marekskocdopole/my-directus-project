{
  "name": "directus-extension-product-generator",
  "version": "1.0.0",
  "description": "Directus extension pro generování produktových popisků a obrázků",
  "keywords": [
    "directus",
    "directus-extension",
    "interface",
    "product-generator"
  ],
  "type": "module",
  
  "directus:extension": {
    "type": "interface",
    "path": "dist/index.js",
    "source": "src/index.ts",
    "host": "^10.1.11"
  },
  
  "scripts": {
    "build": "node --loader ts-node/esm ./node_modules/.bin/directus-extension build",
    "dev": "node --loader ts-node/esm ./node_modules/.bin/directus-extension build --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  
  "devDependencies": {
    "@directus/extensions-sdk": "^10.1.11",
    "@types/express": "^4.17.0",
    "@types/node": "^20.17.10",
    "@types/pg": "^8.11.0",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.1",
    "eslint": "^8.0.0"
  },
  
  "dependencies": {
    "@aws-sdk/client-s3": "^3.0.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "lucide-react": "^0.363.0",
    "openai": "^4.0.0",
    "pg": "^8.13.1",
    "replicate": "^1.0.0"
  },
  
  "engines": {
    "node": ">=16.0.0"
  }
}